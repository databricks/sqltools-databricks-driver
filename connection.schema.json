{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "title": "Host",
      "type": "string",
      "minLength": 1
    },
    "path": {
      "title": "Path",
      "type": "string",
      "minLength": 1
    },
    "token": {
      "title": "Token",
      "type": "string",
      "minLength": 1
    },
    "catalog": {
      "title": "Catalog",
      "default": "hive_metastore",
      "type": "string",
      "minLength": 1
    },
    "schema": {
      "title": "Schema",
      "type": "string",
      "minLength": 1,
      "default": "default"
    },
    "sql_execution_api": {
      "title": "Use SQL execution API (preview)",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "host",
    "path",
    "token"
  ]
}